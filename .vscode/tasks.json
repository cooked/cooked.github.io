{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        
        {
            "label": "Jekyll Build Install (install gems listed in Gemfile)",
            "type": "shell",
            "command": "bundle install",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        /*{
            "label": "Jekyll Build (install gems listed in Gemfile",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },*/
        {
            "label": "Jekyll Serve (with livereload)",
            "type": "shell",
            "command": "bundle exec jekyll serve --livereload",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
        }
    ]
}
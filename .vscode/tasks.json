{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        
        {
            "label": "Jekyll Build Install (install gems listed in Gemfile)",
            "type": "shell",
            "command": "sudo bundle install",
            "group": {
                "kind": "build",
                //"isDefault": true
            },
        },
        {
            "label": "Jekyll Serve ",
            "type": "shell",
            "command": "sudo bundle exec jekyll serve --livereload",
            "group": {
                "kind": "build",
                //"isDefault": true
            },
            //"isBackground": true,
        },
        {
            "label": "Jekyll Serve (incl. drafts)",
            "type": "shell",
            "command": "sudo bundle exec jekyll serve --drafts --livereload",
            "group": {
                "kind": "build",
                //"isDefault": true
            },
            //"isBackground": true,
        }
    ]
}